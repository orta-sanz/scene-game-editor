@import 'nib'

@import './includes/toolbar/style.styl'

*
	margin 0
	padding 0
	box-sizing border-box

.container
	padding 0 20px

#toolbar
	toolbar()

.toolbar-modal
	toolbar-modal()

.modal-overlay
	top 0
	left 0
	z-index 10
	width 100%
	height 100%
	display none
	position absolute
	background-color rgba(0, 0, 0, 0.4)

	&.in
		display initial